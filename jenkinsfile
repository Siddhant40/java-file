pipeline {
    agent { label 'agent1' }
 
    stages {
        stage('Compile') {
            steps {
                sh 'rm -rf java_file || true'
                dir('java_file') {
                    sh 'javac Hello.java'
                    echo "Compilation successful."
                }
            }
        }
        stage('Run') {
            steps {
                dir('java_file') {
                    sh 'java Hello'
                }
            }
        }
    }
}
